<nav class="navbar sticky-top">
  <%= link_to root_path, method: :get, class: "navbar-brand" do %>
    <%= image_tag "logo200x200.png" %>
  <% end  %>
  <ul class="primary-nav">
    <li class="nav-item active" id="courses">
      <%= link_to "Courses", "javascript:void(0)", class: "nav-link scroll-target" %>
    </li>
    <li class="nav-item active">
      <%= link_to "About", "javascript:void(0)", class: "nav-link scroll-target" %>
    </li>
    <li class="nav-item active">
      <%= link_to "FAQs", "javascript:void(0)", class: "nav-link scroll-target" %>
    </li>
  </ul>
  <% if user_signed_in? %>
    <ul class="secondary-nav">
      <li class="nav-item dropdown">
        <%= image_tag "https://eu.ui-avatars.com/api/?name=#{current_user.firstname}+#{current_user.lastname}", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My Courses", courses_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item logout" %>
          </div>
      </li>
    </ul>
    <% else %>
      <ul class="secondary-nav">
        <li class="nav-item active">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      </ul>
    <% end %>
