<div class="login-container">
  <div class="signup-card">
    <div class="signup-logo">
      <%= image_tag "logo200x200.png", class: "login-logo-image" %>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="signup-name">
        <%= f.input :firstname,
                    label: false,
                    inline_label: "firstname",
                    required: true,
                    input_html: {placeholder: "first name"} %>
        <%= f.input :lastname,
                    label: false,
                    inline_label: "lastname",
                    required: true,
                    input_html: {placeholder: "last name"} %>
      </div>
      <div class="signup-email">
        <%= f.input :email,
                    label: false,
                    inline_label: "email",
                    required: true,
                    autofocus: true,
                    input_html: {placeholder: "email", autocomplete: "email" }%>
      </div>
      <div class="signup-password">
        <%= f.input :password,
                    label: false,
                    inline_label: "password",
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: {placeholder:"password", autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    label: false,
                    inline_label: "password_confirmation",
                    required: true,
                    input_html: {placeholder:"password confirmation", autocomplete: "new-password" } %>
      </div>
      <div class="signup-button">
        <%= f.button :submit, "Sign up", class: "lums-button positive-button" %>
      </div>
    <% end %>
  </div>
</div>

